{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "jsx": "react-jsx",
    "types": ["bun-types", "@types/react", "@types/react-dom"]
  },
  "include": ["src/**/*", "serve.ts"],
  "exclude": ["node_modules", "dist"]
}
